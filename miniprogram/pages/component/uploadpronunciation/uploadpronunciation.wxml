<cu-custom bgColor="bg-white" isBack="{{true}}">
  <view slot="content" class="text-black">发布</view>
</cu-custom>
<view style="height:100%;position:absolute;width:100%;">
  <form bindsubmit="release">
    <block>
      <input class="extend text-bold" disabled value="词语"></input>
      <input class="fileName" disabled value="{{word}}"></input>
    </block>
    <block>
      <input class="extend text-bold" disabled value="录音" bindtap="recordOrOver"></input>
      <input class="extend text-grey" style="width:25%;" disabled value="{{status==0?'播放录音':'正在录音...'}}"
        bindtap="playMp3"></input>
      <input name="source" class="record" placeholder="{{status==0?'点击上方开始录音':'点击上方结束录音'}}" disabled
        value="{{source}}"></input>
    </block>
    <block>
      <input class="extend text-bold" disabled value="IPA"></input>
      <input name="ipa" class="fileName" placeholder="请输入该词语的国际音标"></input>
    </block>
    <block>
      <input class="extend text-bold" disabled value="拼音"></input>
      <input name="pinyin" class="fileName" placeholder="请输入该词语的拼音"></input>
    </block>
    <block>
      <input class="extend text-bold" disabled value="县区"></input>
      <input name="county" class="fileName" placeholder="请输入您的县区"></input>
    </block>
    <block>
      <input class="extend text-bold" disabled value="乡镇"></input>
      <input name="town" class="fileName" placeholder="请输入您的乡镇"></input>
    </block>
    <button class="cu-btn block bg-grey shadow margin" style="width:90vw;font-size:32rpx;"
      form-type="submit">发布</button>
  </form>
</view>