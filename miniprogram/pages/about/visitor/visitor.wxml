<scroll-view scroll-y class="scrollPage">
  <image class="bg-image" src="/images/bg2.jpg" mode="aspectFill"></image>
  <view class="bg-info">
    <view class="avatar">
      <image class="cu-avatar round" src="{{avatar}}" mode="aspectFill"></image>
    </view>
    <view class="text">{{nickname}}</view>
  </view>
  <view class="padding flex text-center text-grey bg-white shadow-warp">
    <view class="flex flex-sub flex-direction solid-right" bindtap="getMyRecords">
      <view class="text-xlp text-orange">{{recordsCount}}</view>
      <view class="margin-top-sm">
        <text class="cuIcon-voice"></text> 语音量
      </view>
    </view>
    <view class="flex flex-sub flex-direction solid-right">
      <view class="text-xlp text-blue">{{wordsCount}}</view>
      <view class="margin-top-sm">
        <text class="cuIcon-font"></text> 词语量
      </view>
    </view>
    <view class="flex flex-sub flex-direction">
      <view class="text-xlp text-green">{{visitTotal}}</view>
      <view class="margin-top-sm">
        <text class="cuIcon-attention"></text> 播放量
      </view>
    </view>
  </view>
</scroll-view>